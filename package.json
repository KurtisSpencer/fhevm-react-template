{
  "name": "fhevm-universal-sdk-monorepo",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK for building confidential frontends",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:sdk && npm run build:examples",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "build:examples": "npm run build:nextjs",
    "build:nextjs": "cd examples/nextjs && npm run build",
    "dev": "npm run dev:nextjs",
    "dev:nextjs": "cd examples/nextjs && npm run dev",
    "dev:marathon": "cd examples/anonymous-marathon && npm run dev",
    "test": "npm run test:sdk",
    "test:sdk": "cd packages/fhevm-sdk && npm test",
    "test:integration": "npm run test && npm run build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules",
    "install:all": "npm install && npm run install:sdk && npm run install:examples",
    "install:sdk": "cd packages/fhevm-sdk && npm install",
    "install:examples": "cd examples/nextjs && npm install"
  },
  "keywords": [
    "fhevm",
    "zama",
    "encryption",
    "privacy",
    "web3",
    "sdk",
    "react",
    "nextjs",
    "typescript"
  ],
  "author": "FHEVM SDK Contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/fhevm-universal-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/fhevm-universal-sdk/issues"
  },
  "homepage": "https://github.com/your-org/fhevm-universal-sdk#readme"
}
