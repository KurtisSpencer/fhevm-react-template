{
  "name": "anonymous-marathon-platform",
  "version": "1.0.0",
  "description": "Privacy-first marathon registration system using FHE technology",
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:dos": "hardhat test test/dos.test.js",
    "test:load": "hardhat test test/load.test.js",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:sol:security": "solhint 'contracts/**/*.sol' --config .solhint-security.json",
    "lint:security": "eslint . --config .eslintrc.security.json",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "format": "prettier --write . && npm run lint:fix && npm run lint:sol:fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run lint:sol:security && npm run security:audit",
    "size-check": "hardhat size-contracts",
    "complexity": "hardhat check-complexity",
    "gas:compare": "npm run test:gas > gas-current.txt && echo 'Gas comparison saved'",
    "pre-commit": "npm run prettier:check && npm run lint && npm run lint:sol",
    "pre-push": "npm run test && npm run security:check",
    "commit-msg": "echo 'Commit message validated'",
    "prepare": "husky install || true",
    "docs:generate": "hardhat docgen"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "fhe",
    "privacy",
    "marathon",
    "smart-contracts",
    "hardhat"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "eslint": "^8.57.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.5"
    ,"eslint-plugin-security": "^2.1.0"
    ,"hardhat-contract-sizer": "^2.10.0"
    ,"husky": "^9.0.10"
    ,"lint-staged": "^15.2.0"
    ,"solhint-plugin-prettier": "^0.1.0"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.10.0"
  }
}
